<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1580234831315-438a4813685c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=747&q=80);">
  <div class="container">
    <h1>Stop playing alone or with random people!</h1>
    <p>With PlayingTogether you will always find a buddy to play.</p>
    <a class="btn-login" href="#game-night">Login</a>
  </div>
</div>


<div class="container main-container">

  <h1 id="game-night">Game Nights Avaiable(<%= @posts.count %>)</h1>

  <div class="card-flex">
    <% @posts.each do |post| %>
    <div class="box-item">
      <img class="cover-box" src="<%= post.cover %>" />
      <h2><%= post.title %></h2>
      <p class="game-title"><%= post.game %>
      <div class="btns-info">
        <%= link_to "More info", post_path(post), class: 'btn-my-info' %>
        <%= link_to "Edit", edit_post_path(post), class: 'btn-my-edit' %>
        <%= link_to "Delete", edit_post_path(post), class: 'btn-my-delete' %>

      </div>
    </div>
      <% end %>
  </div>

</div>



